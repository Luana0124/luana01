QUANTIDADE_DE_numeros=5
numero={}
print("=== solicitando dados====")
for i in range(QUANTIDADE_DE_numeros):
    numero = int(input(f"digite o (i+1) numero:"))
    numero.append(numero)

QUANTIDADE_DE_pares=0
quantidade_de_impares=0
quantidade_de_postivos=0
quantidade_DE_negativos=0
soma_pares=0
soma_impares=0

for numero in numero:
    if numero%2==0:
         QUANTIDADE_DE_pares+=1
         soma_pares+=numero
    else:
        QUANTIDADE_DE_impares+=1
        soma_impares+=numero
        if numero>0:
            QUANTIDADE_DE_negativos
        elif:           
         numero>0
         QUANTiDADE_DE_postivos

         print(f"/nqQUANTIDADE DE PARES:{QUANTIDADE_DE_pares}")
         print(f"quantidade de impares: {QUANTIDADE_DE_impares}")
         print (f"quantidade de positivos:{quantidade_de_postivos} ")
         print(f"quantidade de negativos:{QUANTIDADE_DE_negativos}")
