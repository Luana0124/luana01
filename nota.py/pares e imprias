import os
os.system("cls||clear")

Quantidade_de_numeros=5
numeros=[]

print("======= solicitando dados =======")

for i in range(Quantidade_de_numeros):
    numero = int(input(f"Digite o {i+1}ยบ numero:" ))
    numero.append(numero)

quantidade_pares=0
quantidade_impares=0
quantidade_postivos=0
quantidade_negativos=0
soma_pares=0
soma_impares=0

for numero in numeros:
        if numero % 2 == 0:
           quantidade_pares += 1
           soma_pares += numero
        else:
           quantidade_impares+=1
           soma_impares += numero
        if numero < 0:
           quantidade_negativos +=1
        elif numero> 0:
           quantidade_positivos +=1 

print(f"/nQuantidade de pares:{quantidade_pares}") 
print(f"quantidade de impares: {quantidade_impares}")
print (f"quantidade de positivos:{quantidade_postivos} ")
print(f"quantidade de negativos:{quantidade_negativos}")

        
